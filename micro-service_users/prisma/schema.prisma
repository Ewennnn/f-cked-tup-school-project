generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./data/myDB.db"
}

model Meteo {
  insee       Int   @id
  // cp Int   
  latitude    Float
  longitude   Float
  timestamp   Int
  weather     Int
  temp2m      Int
  probarain   Int
  wind10m     Int
  probawind70 Int
}

model User {
  // id Int @default(autoincrement())
  login    String     @id
  password String     @unique
  salt     String     @unique
  email    String     @unique
  favorites Favorite[] 
}

model Favorite {
  id        Int   @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [login])
  userId    String
  // user     User     @relation(fields: [id], references: [login])
  date      DateTime
  activite  String
  ville     String
}

